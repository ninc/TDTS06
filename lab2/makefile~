CC=g++
CFLAGS= -c -Wall -Wextra -Werror
LDFLAGS= -lnsl -lsocket -lresolv

all: msp

msp: main.o socket_server.o socket_client.o url_filter.o
	$(CC) main.o socket_server.o socket_client.o url_filter.o $(LDFLAGS) -o msp

main.o: main.cpp
	$(CC) $(CFLAGS) main.cpp

socket_server.o: socket_server.cpp
	$(CC) $(CFLAGS) socket_server.cpp

socket_client.o: socket_client.cpp
	$(CC) $(CFLAGS) socket_client.cpp	

url_filter.o: url_filter.cpp
	$(CC) $(CFLAGS) url_filter.cpp

clean:
	rm -rf *o msp
